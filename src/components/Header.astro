    <nav
      class="flex space-x-40 md:justify-between justify-center items-center mb-5 text-[#070F2B] dark:text-gray-100 font-semibold"
    >
      <!-- Logo -->
      <a href="/" class="flex items-center py-5 px-2 hover:text-gray-900">
        <Eagle class="fill-slate-800" />
      </a>
      <!-- Primary navigation -->
      <div class="hidden md:flex items-center space-x-1 justify-center">
        <a href="/" class="py-5 px-3 hover:text-[#064d9f] hover:underline"
          >Inicio</a
        >
        <a href="/" class="py-5 px-3 hover:text-[#064d9f] hover:underline"
