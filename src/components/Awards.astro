  >
    <div
      class="flex flex-col items-center justify-around gap-3 w-full md:w-1/4"
    >
      <AwardFirst />
      <h1 class="text-6xl text-[#070F2B] dark:text-gray-500 font-bold">01</h1>
      <h2 class="text-2xl text-[#1B1A55] dark:text-gray-400 font-semibold">
        SUB 08
      </h2>
    </div>
    <div
      class="flex flex-col items-center justify-around gap-3 w-full md:w-1/4"
    >
      <AwardTwo />
      <h1 class="text-6xl text-[#070F2B] dark:text-gray-500 font-bold">01</h1>
      <h2 class="text-2xl text-[#1B1A55] dark:text-gray-400 font-semibold">
        SUB 12
      </h2>
    </div>
    <div
      class="flex flex-col items-center justify-around gap-3 w-full md:w-1/4"
    >
      <AwardThree />
      <h1 class="text-6xl text-[#070F2B] dark:text-gray-500 font-bold">01</h1>
